# -*- mode: ruby -*-
# vi: set ft=ruby :
Vagrant.configure("2") do |config|
  config.vm.box = "hmaster20/windowsXP-ru-x32"
  config.vm.box_version = "1.0.0"
  config.vm.hostname = "WinXPPostgreSQL"
  config.vm.define "wxppg"
  # # config.vm.network "public_network", ip: "192.168.1.249"
  #config.vm.network "private_network", ip: "192.168.1.0"
  config.vm.network  "forwarded_port", guest: 5432, host: 5431, auto_correct: false
  config.vm.provider "virtualbox" do |vb|
    vb.gui = true
    vb.memory = "1024"
	vb.customize ["modifyvm", :id, "--name", "WinXPPostgreSQL"]
	vb.customize ["modifyvm", :id, "--vram", "18"]
    vb.customize ["modifyvm", :id, "--usb", "on"]
    vb.customize ["modifyvm", :id, "--usbehci", "off"]
	vb.customize ["modifyvm", :id, "--clipboard-mode", "bidirectional"]
	vb.customize ["modifyvm", :id, "--draganddrop", "bidirectional"]
  end
  config.vm.boot_timeout = 60
    config.vm.synced_folder ".", "/vagrant", disabled: true
	config.vm.synced_folder  "D:/02-Projects/01-VM/SharedFolder", "/SharedFolder", 
		create: true, automount: true
end